<div class="bar">
  <section class="top-bar">
    <a href="/login" class="options">Logout</a>
    <a href="/" class="options home" style>Home</a>
    <a href="map" class="options home" style>View map</a>
  </section>
</div>
<div class="filler"></div>
<div class="building-menu">
  <% buildingList.forEach(building => { %>
  <a href="/buildings/<%= building %>" class="building-text"><%= building %></a>
  <% }) %>
</div>
<div class="map-container">
  <div class="chair-container">
    <% j = 0 %>
    <% for(i = 0; i < room.tables; i++) { %>
    <article class="table-group">
      <!-- LEFT SIDE CHAIRS -->
      <div class="chair-group">
          <div data-room=<%= room._id%> class="chair book book_hover <%= room.chairs[j].state %>" data-id=<%= j %>>
            <%= j %>
            <div class="chair-state"><%= room.chairs[j].state %></div>
          </div>
        <% j++ %>
          <div data-room=<%= room._id%> class="chair book book_hover <%= room.chairs[j].state %>" data-id=<%= j %>>
            <%= j %>
            <div class="chair-state"><%= room.chairs[j].state %></div>
          </div>
        <% j++ %>
      </div>
      <!-- TABLE -->
      <div class="table"></div>
      <!-- RIGHT SIDE CHAIRS -->
      <div class="chair-group">
          <div data-room=<%= room._id%> class="chair book book_hover <%= room.chairs[j].state %>" data-id=<%= j %>>
            <%= j %>
            <div class="chair-state"><%= room.chairs[j].state %></div>
          </div>
        <% j++ %>
          <div data-room=<%= room._id%> class="chair book book_hover <%= room.chairs[j].state %>" data-id=<%= j %>>
            <%= j %>
            <div class="chair-state"><%= room.chairs[j].state %></div>
          </div>
        <% j++ %>
      </div>
    </article>
    <% } %>
  </div>
</div>
